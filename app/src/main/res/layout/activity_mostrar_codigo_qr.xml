<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="us.tfg.p2pmessenger.view.MostrarCodigoQRActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    tools:layout_constraintTop_creator="1"
                    tools:layout_constraintRight_creator="1"
                    tools:layout_constraintBottom_creator="1"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    tools:layout_constraintLeft_creator="1"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagen_codigo_qr"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"/>

        <TextView
            android:id="@+id/texto_codigo_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Codigo para unirse al grupo"
            android:layout_below="@+id/imagen_codigo_qr"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/boton_copiar_codigo"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/texto_codigo_qr"
            android:text="@string/texto_copiar"
            android:textColor="@color/accent"
            android:textSize="15sp"
            android:background="@color/primary_dark"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
