<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="2dp"
    >

    <ImageView
        android:id="@+id/contacto_profile_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/user_icon"
        />

    <TextView
        android:id="@+id/contacto_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/contacto_profile_picture"
        android:paddingBottom="10dp"
        android:text="Desconocido"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/contacto_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/contacto_alias"
        android:layout_below="@+id/contacto_alias"
        android:text="Unkn0wn"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/contacto_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contacto_alias"
        android:layout_alignBottom="@+id/contacto_alias"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="&lt;0xXXXXXX..&gt;"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/contacto_id_completo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <TextView
        android:id="@+id/admin_tag"
        android:textColor="#00c853"
        android:background="@drawable/admin_tag_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contacto_nombre_usuario"
        android:layout_alignBottom="@+id/contacto_nombre_usuario"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Admin. del grupo"
        android:textSize="15sp"/>
</RelativeLayout>